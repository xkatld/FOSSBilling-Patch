{% extends request.ajax ? "layout_blank.html.twig" : "layout_default.html.twig" %}

{% block meta_title %}LXDAPI 管理{% endblock %}

{% block content %}
<div class="card">
    <div class="card-header">
        <h3 class="card-title">LXDAPI 管理</h3>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body text-center">
                        <h4><i class="fa fa-server fa-3x mb-3"></i></h4>
                        <h5>服务器管理</h5>
                        <p class="text-muted">管理 LXD API 服务器</p>
                        <a href="{{ 'servicelxdapi/servers'|alink }}" class="btn btn-primary">
                            进入管理
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body text-center">
                        <h4><i class="fa fa-book fa-3x mb-3"></i></h4>
                        <h5>使用文档</h5>
                        <p class="text-muted">查看插件使用说明</p>
                        <a href="https://github.com/xkatld/lxdapi-web-server" target="_blank" class="btn btn-secondary">
                            查看文档
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
